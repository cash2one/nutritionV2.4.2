<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper
	namespace="com.jumper.weight.nutrition.hospital.mapper.WeightHospitalTemplateMapper">
	<resultMap id="BaseResultMap"
		type="com.jumper.weight.nutrition.hospital.entity.WeightHospitalTemplate">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="hospital_id" property="hospitalId" jdbcType="INTEGER" />
		<result column="type" property="type" jdbcType="INTEGER" />
		<result column="content" property="content" jdbcType="VARCHAR" />
		<result column="add_time" jdbcType="TIMESTAMP" property="addTime" />
	</resultMap>
	<sql id="Base_Column_List">
		id, hospital_id, type, content, add_time
	</sql>

	<!-- 查询医院模板设置列表 -->
	<select id="findHospitalTemplate" parameterType="map" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from weight_hospital_template where hospital_id=#{hospitalId}
		<if test="type!=0">
			and type=#{type}
		</if>
	</select>

	<!-- 添加模板信息 -->
	<insert id="insert"
		parameterType="com.jumper.weight.nutrition.hospital.entity.WeightHospitalTemplate"
		flushCache="true" keyColumn="GENERATED_KEY" keyProperty="id"
		useGeneratedKeys="true">
		insert into weight_hospital_template
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="hospitalId != null">
				hospital_id,
			</if>
			<if test="type != null">
				type,
			</if>
			<if test="content != null">
				content,
			</if>
			<if test="addTime != null">
				add_time,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="hospitalId != null">
				#{hospitalId,jdbcType=INTEGER},
			</if>
			<if test="type != null">
				#{type,jdbcType=INTEGER},
			</if>
			<if test="content != null">
				#{content,jdbcType=VARCHAR},
			</if>
			<if test="addTime != null">
				#{addTime,jdbcType=TIMESTAMP},
			</if>
		</trim>
	</insert>

	<!-- 修改模板信息 -->
	<update id="update"
		parameterType="com.jumper.weight.nutrition.hospital.entity.WeightHospitalTemplate">
		update weight_hospital_template
		<set>
			<if test="hospitalId != null">
				hospital_id = #{hospitalId,jdbcType=INTEGER},
			</if>
			<if test="type != null">
				type = #{type,jdbcType=INTEGER},
			</if>
			<if test="content != null">
				content = #{content,jdbcType=VARCHAR},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>

	<!-- 删除医院模板信息 -->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from weight_hospital_template
		where id = #{id,jdbcType=INTEGER}
	</delete>

	<!-- 通过id查询模板信息 -->
	<select id="findById" parameterType="int" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from weight_hospital_template where id=#{id}
	</select>
	
	<!-- 通过医院id查询 -->
	<select id="listTemplateByHosp" parameterType="int" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List"></include>
		from weight_hospital_template where hospital_id = #{hospitalId}
	</select>
</mapper>